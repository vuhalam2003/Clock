<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context=".AlarmFragment">

    <!-- RecyclerView to display existing alarms -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/alarmRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:clipToPadding="false"
        android:scrollbars="vertical"/>

    <!-- FloatingActionButton to add new alarms -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addAlarmBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        android:contentDescription="@string/add_alarm"
        app:backgroundTint="@color/primary_color"/>

    <!-- LinearLayout for adding alarm details -->
    <LinearLayout
        android:id="@+id/addAlarmDetailsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:visibility="gone"
        android:padding="16dp">

        <!-- EditText for alarm label -->
        <EditText
            android:id="@+id/editTextLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Alarm Label"
            android:textColor="@android:color/white"
            android:background="@drawable/edittext_background"/>

        <!-- MultiAutoCompleteTextView for selecting repeat days -->
        <MultiAutoCompleteTextView
            android:id="@+id/multiAutoCompleteTextViewDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Repeat Days"
            android:textColor="@android:color/white"
            android:background="@drawable/edittext_background"
            android:padding="8dp"
            android:completionThreshold="1"
            android:tokenLimit="7"
            android:tokenizer="android.widget.MultiAutoCompleteTextView$CommaTokenizer"
            android:dropDownHeight="200dp"
            android:dropdow="@color/cardview_dark_background"
            android:popupBackground="@color/cardview_dark_background"
            android:scrollbars="vertical"
            android:entries="@array/days_array"
            android:inputType="textCapCharacters"/>

        <!-- Button to save the alarm -->
        <Button
            android:id="@+id/buttonSaveAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Alarm"
            android:layout_gravity="end"
            android:onClick="saveAlarm"/>

    </LinearLayout>

</FrameLayout>
